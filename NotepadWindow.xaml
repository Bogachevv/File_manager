<Window x:Class="File_manager.NotepadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:File_manager"
        mc:Ignorable="d"
        MaxHeight="1080"
        MaxWidth="1920"
        Title="NotepadWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox Name="text" Grid.Column="0" Grid.Row="1" Margin="10"></TextBox>
        <Menu Name="menu" Grid.Column="0" Grid.Row="0">
            <MenuItem Header="file">
                <MenuItem Header="New"/>
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <MenuItem Header="Save as"/>
                <MenuItem Header="Close"/>
            </MenuItem>
            <MenuItem Header="info"/>
        </Menu>
    </Grid>
</Window>

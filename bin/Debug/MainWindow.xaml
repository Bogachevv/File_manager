<Window x:Class="File_manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:File_manager"
        mc:Ignorable="d"
        Title="Home server" Height="500" Width="600"
        MaxHeight="1080"
        MaxWidth="1920">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="420*" />
            <RowDefinition Height="50*" />
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" FontSize="15" Margin="10,0,10,0">Local:</Label>
        <Label Grid.Column="1" Grid.Row="0" FontSize="15" Margin="10,0,10,0">Server:</Label>
        <ListBox Name="local" Grid.Column="0" Grid.Row="1" Margin="10"></ListBox>
        <ListBox Name="server" Grid.Column="1" Grid.Row="1" Margin="10"></ListBox>
        <Button Name="uploadButton" Grid.Column="0" Grid.Row="2" Margin="10,10,10,10" >Upload</Button>
        <Button Name="downloadButton" Grid.Column="1" Grid.Row="2" Margin="10,10,10,10" >Download</Button>
    </Grid>
</Window>
